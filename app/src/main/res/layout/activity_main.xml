<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/wallpaper"
        tools:context=".MainActivity">

        <!--<include layout="@layout/activity_nav_drawer"/>-->

        <ListView
            android:id="@+id/my_list_view2"
            android:layout_width="357dp"
            android:layout_height="397dp"
            android:layout_below="@+id/edit_text_add_item"
            android:layout_margin="20dp"
            android:background="@drawable/linear_layout_box"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="57dp"
            android:longClickable="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <EditText
            android:id="@+id/edit_text_add_item"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:padding="10dp"
            android:hint="Enter item"
            android:background="@drawable/form_field_edit_text"
            android:layout_margin="20dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_text_add_description"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:background="@drawable/form_field_edit_text"
            android:layout_alignLeft="@+id/edit_text_add_item"
            android:ems="10"
            android:layout_marginTop="60dp"
            android:hint="Enter Description"
            android:padding="10dp" />

        <!--<Button-->
        <!--android:id="@+id/update"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/my_list_view2"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginStart="152dp"-->
        <!--android:layout_marginTop="11dp"-->
        <!--android:layout_weight="1"-->
        <!--android:text="Update" />-->

        <Button
            android:id="@+id/button_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_dark_green"
            android:textColor="@color/colorPrimary"
            android:layout_margin="20dp"
            android:text="Add item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="377dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="63dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editPwButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Pw" />

            <Button
                android:id="@+id/editUserNameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Name" />

            <Button
                android:id="@+id/leaveHouseholdButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LeaveHouse" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update" />

        </LinearLayout>

        <include layout="@layout/tabbar"/>

    </RelativeLayout>
    </FrameLayout>


</android.support.v4.widget.DrawerLayout>


