<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.co444444rrrrrrrrrrrm/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/wallpaper"
        tools:context=".MainActivity">

        <!--<include layout="@layout/activity_nav_drawer"/>-->


        <ListView
            android:id="@+id/my_list_view2"
            android:layout_width="357dp"
            android:layout_height="397dp"
            android:layout_below="@+id/edit_text_add_item"
            android:layout_margin="20dp"
            android:background="@drawable/linear_layout_box"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="57dp"
            android:longClickable="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />






        <EditText
            android:id="@+id/edit_text_add_item"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:padding="10dp"
            android:hint="Enter item"
            android:background="@drawable/form_field_edit_text"
            android:layout_margin="20dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_text_add_description"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:background="@drawable/form_field_edit_text"
            android:layout_alignLeft="@+id/edit_text_add_item"
            android:ems="10"
            android:layout_marginTop="60dp"
            android:hint="Enter Description"
            android:padding="10dp" />

        <!--<Button-->
        <!--android:id="@+id/update"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/my_list_view2"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginStart="152dp"-->
        <!--android:layout_marginTop="11dp"-->
        <!--android:layout_weight="1"-->
        <!--android:text="Update" />-->

        <Button
            android:id="@+id/button_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_dark_green"
            android:textColor="@color/colorPrimary"
            android:layout_margin="20dp"
            android:text="Add item" />


        <include layout="@layout/tabbar"/>
            <Button
                android:id="@+id/addMemberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_add_item"
                android:layout_alignTop="@+id/edit_text_add_description"
                android:text="Add Member" />

    </RelativeLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>


