<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/wallpaper"
        tools:context=".MainActivity">

        <!--<include layout="@layout/activity_nav_drawer"/>-->


            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">
                <EditText
                    android:id="@+id/edit_text_add_item"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    android:hint="Enter item"
                    android:background="@drawable/layout_border"
                    android:layout_marginBottom="5dp"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edit_text_add_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:layout_below="@id/edit_text_add_item"
                    android:layout_alignParentLeft="true"
                    android:hint="Enter Description"
                    android:padding="10dp" />
                <Button
                    android:id="@+id/button_add_item"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_dark_green"
                    android:textColor="@color/colorPrimary"
                    android:text="Add item" />
            </RelativeLayout>


            <ListView
                android:id="@+id/my_list_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/details"
                android:layout_margin="40dp"
                android:layout_above="@id/tabbar"
                android:background="@drawable/layout_border_thick"
                android:longClickable="true"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

        <!--<Button-->
        <!--android:id="@+id/update"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/my_list_view2"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginStart="152dp"-->
        <!--android:layout_marginTop="11dp"-->
        <!--android:layout_weight="1"-->
        <!--android:text="Update" />-->

        <include layout="@layout/tabbar"
            android:id="@+id/tabbar"/>

    </RelativeLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

        <TextView
            android:id="@+id/UserNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            />
        <TextView
            android:id="@+id/HouseholdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textFontWeight="20"
            />

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>


