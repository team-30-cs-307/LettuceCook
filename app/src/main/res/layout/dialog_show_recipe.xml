<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:padding="10dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_title"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/recipe_title"
        android:padding="10dp"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/recipe_procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_ingredients"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/recipe_ingredients"
        android:padding="5dp"
        android:textSize="12dp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_dark_green"
        android:textColor="#FFFFFF"
        android:text="Save Recipe"></Button>

    <Button
        android:id="@+id/button_back"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@drawable/button_dark_green"
        android:text="Back"
        android:layout_toStartOf="@+id/button_save"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:textColor="#FFFFFF"></Button>



</RelativeLayout>