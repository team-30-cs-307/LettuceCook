<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/layout_border_thick"
    >

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/recipe_title"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/ing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_title"
        android:text="Ingredients"
        android:paddingTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ing"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/recipe_title"
        android:padding="10dp"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/proc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_ingredients"
        android:text="Procedure"
        android:fontFamily="sans-serif-medium"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/recipe_procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proc"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/layout_border"
        android:layout_toEndOf="@+id/recipe_ingredients"
        android:padding="10dp"
        android:textSize="12dp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/recipe_title"
        android:layout_alignParentRight="true"
        android:background="@drawable/star_button"
        ></Button>

    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@drawable/back_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        ></Button>



</RelativeLayout>