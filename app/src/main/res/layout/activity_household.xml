<?xml version="1.0" encoding="UTF-8"?>


<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/wallpaper"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/householdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter household name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="446dp" />

    <Button
        android:id="@+id/joinHouseholdButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="162dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="130dp"
        android:text="JOIN"
        />

    <Button
        android:id="@+id/showInvites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="52dp"
        android:text="Show invites"
         />

    <TextView
        android:id="@+id/invites"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:layout_marginBottom="177dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="53dp"
       />

    <Button
        android:id="@+id/showUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showUsers"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView android:layout_height="105dp" android:layout_width="119dp" app:layout_constraintTop_toBottomOf="@+id/invites" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="71dp" android:layout_marginStart="18dp" android:layout_marginEnd="25dp" android:layout_marginBottom="7dp" android:id="@+id/listUsers" app:layout_constraintBottom_toTopOf="@+id/HouseholdButton" app:layout_constraintStart_toEndOf="@+id/joinHouseholdButton"/>


</android.widget.RelativeLayout>